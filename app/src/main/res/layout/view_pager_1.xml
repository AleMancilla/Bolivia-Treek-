<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_albergues"
                    android:padding="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="btn_albergues"
                    android:layout_margin="10sp"

                    android:text="Albergues" />

                <Button
                    android:id="@+id/button_recomendaciones"
                    android:layout_margin="10sp"
                    android:padding="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="btn_recomendaciones"
                    android:text="Recomendaciones" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5">

                <Button
                    android:id="@+id/button_pueblos"
                    android:layout_margin="10sp"
                    android:padding="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="btn_pueblos"
                    android:text="Pueblos" />

                <Button
                    android:id="@+id/button_servicios"
                    android:layout_margin="10sp"
                    android:padding="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="btn_servicios"
                    android:text="Servicios" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView_title_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_descripcion_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_mitos_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_texto_mitos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_como_llegar_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_texto_como_llegar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:text="TextView" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>